.hero {
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 550px;
  background-image: url('~images/content/hero.jpg');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;

  &__container {
    display: flex;
    flex-direction: column;
    padding: 30px 0;
    flex: 1;
  }

  &__content {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
  }
}